@page
@model Ioniță_Maria_Isabela_Lab2.Pages.Borrowings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Borrowing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Member
        </dt>
        <dd class="col-sm-10">
            @Model.Borrowing.Member?.FullName
        <dt class="col-sm-2">
            Book
        </dt>
        <dd class="col-sm-10">
                @Model.Borrowing.Book?.Title
                @if (Model.Borrowing.Book?.Author != null)
                {
                <span>by @Model.Borrowing.Book.Author.FullName</span>
                }
        </dd>
        <dt class="col-sm-2">
            Return Date
        </dt>
        <dd class="col-sm-10">
                @Model.Borrowing.ReturnDate.ToString("d")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Borrowing.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
